<div class="main-container">
  <div class="top-section mb-4">
    <div class="container1" id="background-img">
      <div class="header">
        <div class="text-container">
          <div class="text">
            <h1><i class="fa-solid fa-sailboat fa-1x logo">  BoatB&B</i></h1>
            <p class="mb-1">Your Number 1 Source for Boat Rentals</p>
          </div>
          <div class="search-bar">
            <%= render partial: "shared/search_bar", locals: { location: @locations } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex">
    <div class="bottom-section">
      <div class="container-fluid d-flex justify-content-center">
        <% if params[:location].present? %>
          <h1>Boats in <%= params[:location].capitalize %></h1>
        <% end %>
        <% if @boats.empty? %>
          <p>Sorry, no boats match your search criteria.</p>
        <% else %>
          <div class="row row-cols-1 custom-column-height">
            <% @boats.each do |boat| %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a href="<%= boat_path(boat) %>" class="text-decoration-none">
                  <%= render partial: "shared/boatcard", locals: { boat: boat } %>
                </a>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="d-block d-sm-none mt-3">
        <a href="/boats/map_view" class="btn btn-dark fixed-bottom">Map</a>
      </div>
    </div>
    <% if @markers.present? %>
      <!-- Show the map on screens above 425px -->
      <div class="d-none d-sm-block col-sm-4">
        <div class="sticky-top sticky-bottom">
          <div data-controller="map" id="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value="<%= @markers.to_json %>" style="width: 100%" class="vh-100"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
