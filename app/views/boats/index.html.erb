<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Add your head content here -->
</head>
<body>
  <div class="container text-center">
    <h1>Boats</h1>
  </div>

  <div class="container">
    <div data-controller="map" id="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value="<%= @markers.to_json %>" style="width: 100%; height: 400px;"></div>
    <div class="row row-cols-1 row-cols-md-3 g-2">
      <% @boats.each do |boat| %>
        <div class="col mb-2">
          <a href="<%= boat_path(boat) %>" class="text-decoration-none">
            <%= render partial: "shared/boatcard", locals: { boat: boat } %>
          </a>
        </div>
      <% end %>
    </div>
  </div>

  <div class="main-container">
    <div class="top-section">
      <div class="container1" id="background-img">
        <div class="header">
          <div class="text-container mt-5">
            <div class="text">
              <h1><i class="fa-solid fa-sailboat fa-1x logo">  BoatB&B</i></h1>
              <p style="color: rgb(99, 99, 99);">Your Number 1 Source for Boat Rentals</p>
            </div>
            <div class="search-bar">
              <%= render partial: "shared/search_bar", locals: { location: @locations } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    
    <div class="bottom-section mb-4">
      <div class="container text-center">
        <% if params[:location].present? %>
          <h1>Boats in <%= params[:location].capitalize %></h1>
        <% else %>
          <h1>Boats</h1>
        <% end %>
      </div>
      <div class="container">
        <div class="row text-center">
          <% if @boats.empty? %>
            <p>Sorry, no boats match your search criteria.</p>
          <% else %>
            <div class="row text-center row-cols-3">
              <% @boats.each do |boat| %>
                <div class="col mb-2">
                  <a href="<%= boat_path(boat) %>" class="text-decoration-none">
                    <%= render partial: "shared/boatcard", locals: { boat: boat } %>
                  </a>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div style="margin-bottom: 100px;"></div>
  </div>
</body>
</html>
